<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="document_view_search" model="ir.ui.view">
        <field name="name">Document search view</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_search"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="res_id" invisible="1"/>
                <field name="res_model" invisible="1"/>
                <field name="lead_id" string="Lead / Opportunity"/>
            </search>
        </field>
    </record>

    <record id="documents_document_form_inherit" model="ir.ui.view">
        <field name="name">documents.document.form.inherit</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="lead_id"/>
            </field>
        </field>
    </record>

    <record id="documents_document_tree_inherit" model="ir.ui.view">
        <field name="name">documents.document.tree.inherit</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.documents_view_list"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="lead_id"/>
            </field>
        </field>
    </record>
</odoo>

